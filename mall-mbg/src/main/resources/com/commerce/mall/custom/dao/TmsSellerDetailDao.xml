<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.commerce.mall.custom.dao.TmsSellerDetailDao">
    <resultMap id="BaseResultMap" type="com.commerce.mall.custom.dto.TmsSellerDetail">
        <id column="seller_id" jdbcType="INTEGER" property="sellerId"/>
        <result column="seller_name" jdbcType="VARCHAR" property="sellerName"/>
        <result column="tel" jdbcType="VARCHAR" property="tel"/>
        <result column="logo_url" jdbcType="VARCHAR" property="logoUrl"/>
        <result column="min_price" jdbcType="DECIMAL" property="minPrice"/>
        <result column="closed" jdbcType="VARCHAR" property="closed"/>
        <result column="is_delete" jdbcType="VARCHAR" property="isDelete"/>
        <result column="addr_id" jdbcType="BIGINT" property="addrId"/>
        <association property="address" column="{id=addr_id}"
                     select="com.commerce.mall.mapper.UmsMemberReceiveAddressMapper.selectByPrimaryKey"/>
    </resultMap>
    <resultMap id="ResultMapWithBLOBs" extends="BaseResultMap" type="com.commerce.mall.custom.dto.TmsSellerDetail">
        <result column="intro" jdbcType="LONGVARCHAR" property="intro"/>
    </resultMap>
    <sql id="Example_Where_Clause">
        <where>
            <foreach collection="oredCriteria" item="criteria" separator="or">
                <if test="criteria.valid">
                    <trim prefix="(" prefixOverrides="and" suffix=")">
                        <foreach collection="criteria.criteria" item="criterion">
                            <choose>
                                <when test="criterion.noValue">
                                    and ${criterion.condition}
                                </when>
                                <when test="criterion.singleValue">
                                    and ${criterion.condition} #{criterion.value}
                                </when>
                                <when test="criterion.betweenValue">
                                    and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                                </when>
                                <when test="criterion.listValue">
                                    and ${criterion.condition}
                                    <foreach close=")" collection="criterion.value" item="listItem" open="("
                                             separator=",">
                                        #{listItem}
                                    </foreach>
                                </when>
                            </choose>
                        </foreach>
                    </trim>
                </if>
            </foreach>
        </where>
    </sql>
    <sql id="Base_Column_List">
        seller_id, seller_name, tel, logo_url, addr_id, min_price, closed, is_delete
    </sql>
    <sql id="Blob_Column_List">
        intro
    </sql>
    <select id="selectByPrimaryKey" resultMap="ResultMapWithBLOBs">
        select<include refid="Base_Column_List"/>,
        <include refid="Blob_Column_List"/>
        from tms_seller
        where seller_id=#{sellerId}
    </select>
    <select id="selectByExampleWithBLOBs" resultMap="ResultMapWithBLOBs">
        select
        <include refid="Base_Column_List"/>
        ,
        <include refid="Blob_Column_List"/>
        from tms_seller
        <where>
            <if test="keyword!=null">
            <bind name="keyword" value="'%'+keyword+'%'"/>
                and seller_name like #{keyword}
            </if>
        </where>
        <if test="orderByClause != null">
            order by ${orderByClause}
        </if>
    </select>
    <update id="updateAttrIsDelete">
        update tms_seller
        <set>
            is_delete = #{isDelete,jdbcType=VARCHAR},
        </set>
        where seller_id = #{sellerId,jdbcType=INTEGER}
    </update>

    <update id="updateAttrClosed">
        update tms_seller
        <set>
            closed = #{closed,jdbcType=VARCHAR},
        </set>
        where seller_id = #{sellerId,jdbcType=INTEGER}
    </update>
    <update id="updateAttrIsDeleteInBatch">
        update tms_seller
        set is_delete=#{isDelete}
        where seller_id in
        <foreach collection="sellerIds" separator="," item="id" open="(" close=")" index="idx">
            #{id}
        </foreach>
    </update>
</mapper>