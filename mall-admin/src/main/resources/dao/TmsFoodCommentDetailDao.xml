<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.commerce.mall.dao.TmsFoodCommentDetailDao">
    <resultMap id="BaseResultMap" type="com.commerce.mall.dto.TmsFoodCommentDetail">
        <id column="comm_id" jdbcType="INTEGER" property="commId"/>
        <result column="post_time" jdbcType="TIMESTAMP" property="postTime"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="food_id" jdbcType="INTEGER" property="foodId"/>
        <result column="food_name" jdbcType="VARCHAR" property="foodName"/>
        <result column="reply" jdbcType="VARCHAR" property="reply"/>
        <result column="nice" jdbcType="VARCHAR" property="nice"/>
        <result column="nickname" jdbcType="VARCHAR" property="nickname"/>
        <collection property="commPics" ofType="com.commerce.mall.model.TmsFoodCommentsPics">
            <id column="pic_id" jdbcType="INTEGER" property="picId"/>
            <result column="pic_url" jdbcType="VARCHAR" property="picUrl"/>
            <result column="pic_desc" jdbcType="VARCHAR" property="picDesc"/>
            <result column="comm_id" jdbcType="INTEGER" property="commId"/>
        </collection>
    </resultMap>
    <resultMap extends="BaseResultMap" id="ResultMapWithBLOBs" type="com.commerce.mall.dto.TmsFoodCommentDetail">
        <result column="content" jdbcType="LONGVARCHAR" property="content"/>
    </resultMap>
    <sql id="Base_Column_List">
        comm_id, nice, post_time, user_id, food_id, reply
    </sql>
    <sql id="Blob_Column_List">
        content
    </sql>
    <sql id="Base_Column_List_Food_Comment">
        pic_id, pic_url, pic_desc, comm_id
    </sql>
    <update id="updateReplyByPrimaryKey">
        update tms_food_comments
        set reply=#{reply,jdbcType=VARCHAR}
        where comm_id = #{commId}
    </update>
    <select id="selectCommentsDetailed" resultMap="ResultMapWithBLOBs">
        select
        comm_id,nice, content, post_time, user_id, fc.food_id, reply,f.food_name,m.nickname,
        pic_id, pic_url, pic_desc,
        from tms_food_comments fc
        left join tms_food f on fc.food_id=f.food_id
        left join tms_food_comments_pics fcp on fc.comm_id=fcp.comm_id
        left join ums_member m on fc.user_id=m.id
        <where>
            and f.seller_id=#{sellerId}
            <if test="foodId!=null">
                and fc.food_id=#{foodId}
            </if>
            <if test="keyword!=null">
                and f.food_name like #{keyword}
            </if>
        </where>
        order by post_time desc
    </select>
    <select id="selectByPrimaryKey" resultMap="ResultMapWithBLOBs">
        select comm_id,
               content,
               post_time,
               user_id,
               reply,
               m.nickname
        from tms_food_comments f
                 left join ums_member m on f.user_id = m.id
        where comm_id = #{commId}
    </select>
</mapper>