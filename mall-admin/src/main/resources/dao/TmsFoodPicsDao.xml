<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.commerce.mall.dao.TmsFoodPicsDao">
    <resultMap id="BaseResultMap" type="com.commerce.mall.model.TmsFoodPics">
        <id column="pic_id" jdbcType="INTEGER" property="picId"/>
        <result column="pic_url" jdbcType="VARCHAR" property="picUrl"/>
        <result column="pic_desc" jdbcType="VARCHAR" property="picDesc"/>
        <result column="is_main" jdbcType="VARCHAR" property="isMain"/>
        <result column="food_id" jdbcType="INTEGER" property="foodId"/>
    </resultMap>
    <sql id="Base_Column_List">
        pic_id, pic_url, pic_desc, is_main, food_id
    </sql>
    <select id="selectMainPic" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from tms_food_pics
        where food_id = #{foodId,jdbcType=INTEGER} and is_main='1'
    </select>
    <insert id="insertSelectiveInBatch" parameterType="java.util.List">
        <!-- <selectKey keyProperty="picId" order="AFTER" resultType="java.lang.Integer"> -->
        <!-- SELECT LAST_INSERT_ID() -->
        <!-- </selectKey>  -->
        insert into tms_food_pics ( pic_url, pic_desc, is_main, food_id)
        values
        <foreach collection="pics" index="idx" item="p" separator=",">
            <trim prefix="(" suffix=")" suffixOverrides=",">
                #{p.picUrl,jdbcType=VARCHAR},#{p.picDesc,jdbcType=VARCHAR},#{p.isMain,jdbcType=VARCHAR},#{p.foodId,jdbcType=INTEGER},
            </trim>
        </foreach>
    </insert>
</mapper>